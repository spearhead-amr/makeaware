.serif-home
    font-size: 10vw
    line-height: 1.15
    font-family: 'PP Editorial New', serif
    font-weight: 200

    +media(tablet-v)
        font-size: 3rem
        line-height: 1.15

    +media(tablet-h)
        font-size: 5rem

    +media(desktop)
        font-size: 8rem

    +media(desktop-w)
        font-size: 12rem

.serif-title
    font-size: calc(1.7rem * 2)   // old 1.7rem
    line-height: calc(1.7rem*1.15*2)
    font-family: 'PP Editorial New', serif
    font-weight: 200

    +media(desktop)
        font-size: 7rem
        line-height: calc(7rem*1.15)

.serif-subtitle
    font-size: 1.7rem
    line-height: 1.30
    font-family: 'PP Editorial New', serif
    font-weight: 200

    +media(desktop)
        font-size: 3.5rem
        line-height: 1.25

.serif-paragraph
    font-size: 1.5rem
    line-height: 1.38
    font-family: 'PP Editorial New', serif
    font-weight: 200

    +media(desktop)
        font-size: 2.5rem
        line-height: 1.38

.serif-filters
    font-size: 0.7rem
    line-height: calc(0.7rem*1.15)
    font-family: 'PP Editorial New', serif
    font-weight: 200

    +media(desktop)
        font-size: 2.2rem
        line-height: calc(2.2rem*1.15)

.serif-captiontitle
    font-size: 0.9rem
    line-height: calc(0.9rem*1.15)
    font-family: 'PP Editorial New', serif
    font-weight: 200

    +media(desktop)
        font-size: 1.9rem
        line-height: calc(1.9rem*1.15)

.serif-caption
    font-size: calc(0.7rem*1.5) // old 0.7rem
    line-height: calc(0.7rem*1.15*1.5)
    font-family: 'PP Editorial New', serif
    font-weight: 200

    +media(desktop)
        font-size: 1.4rem
        line-height: calc(1.4rem*1.15)


.sans-logo
    font-size: 1.5em
    font-family: sans-serif
    font-weight: bold

    +media(desktop)
        font-size: 3rem
        line-height: 2

.sans-menu
    font-size: 1.2rem
    line-height: calc(1.2rem*1.15)
    font-family: 'Suisse Intl', sans-serif
    font-weight: 300

    +media(tablet-h)
        font-size: 1rem   // old 0.8

    +media(desktop)
        font-size: 1.3rem
        line-height: calc(1.3rem*1.15)

.sans-paragraph
    font-size: 1.5rem  // old 0.65
    line-height: 1.30
    font-family: 'Suisse Intl', sans-serif
    font-weight: 300

    +media(desktop)
        font-size: 1.9rem
        line-height: 1.40

.sans-caption
    font-size: 1.2rem   // old 0.6rem
    line-height: 1.15
    font-family: 'Suisse Intl', sans-serif
    font-weight: 300

    +media(desktop)
        font-size: 1.4rem
        line-height: 1.15

.sans-scheme
    font-size: 0.55rem
    line-height: 1.15
    font-family: 'Suisse Intl', sans-serif
    font-weight: 300

    +media(desktop)
        font-size: 1.1rem
        line-height: calc(1.1rem*1.15)