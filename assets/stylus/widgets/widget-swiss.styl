// widget-swiss.styl - Styles for Swiss visualization in Stylus

// Specific styles for widget-swiss-viz
#widget-swiss-viz
    .viz-container
        margin: 0
        margin-top: 1rem
       
        width: 100% // Full width to expand to container edges
        padding: 0 // No padding to maximize space usage
        min-height: 100vh // Ensure minimum height for visibility
            
        +media(tablet-v)
            width: 100%
            padding: 0
            
        +media(tablet-h)
            width: 100%
            padding: 0
   

    svg
        width: 100%
        height: auto
        display: flex
        overflow: visible

    // Grid headers styling
    .col-header,
    .row-header
        @extend .sans-scheme
        fill: brand-black
        pointer-events: none


    // Cell group styles - no hover effects
    .cell-group
        pointer-events: none // Remove all interactions

    // Outer circle (samples taken) - stroke only, larger
    .samples-circle
        fill: none
        stroke: brand-black
        stroke-width: 1

    // Inner circle (resistant bacteria) - larger and filled
    .resistant-circle
        fill: brand-black