#main-home
    @extend .content-margins

#content-sticky
    position: relative
    // Padding-bottom per il margine desiderato (mobile-first)
    padding-bottom: 3rem        // Mobile: più spazio
    
    +media(tablet-v)
        padding-bottom: 2.5rem  // Tablet verticale: spazio intermedio
    
    +media(tablet-h)
        padding-bottom: 2rem    // Tablet orizzontale e desktop: spazio standard


#home-intro
   
    height: calc(94vh-1.1rem)
    
    h1
        @extend .sans-logo
        margin-top: 6vh

        +media(tablet-h)
            margin-top: 10vh

    h2
        @extend .serif-home

        #glyph-1:before
            content: "✤"
        
        #glyph-2:before
            content: "✧"
        
        #glyph-3:before
            content: "⑩"

    

    +media(tablet-h)
        height: calc(90vh-2.4rem)


.makeaware-description
    display: flex
    flex-direction: column 
        
    
    h1   
        @extend .sans-caption
        padding-bottom: 0.5rem

        &:after
            content: " ↓"
            position: relative
            bottom: 0.2rem

        &:before
            content: "↓ "
            position: relative
            bottom: 0.2rem

        +media(tablet-h)
            padding-bottom: 1rem

    p
        @extend .serif-subtitle


.description-content
    display: flex
    flex-direction: column

    +media(tablet-h)
      flex-direction: row
      gap: 1rem

    img
      width: 100%

      +media(tablet-h)
        width: 40%
        height: auto
        object-fit: cover

    p
      @extend .sans-paragraph
      margin-top: 2rem

      +media(tablet-h)
        width: 60vw
        margin-top: 0

#widget-amr
    margin-bottom: 20vh

    h1
        @extend .serif-title
        margin-bottom: 1rem

    #widget-amr-abstract
        @extend .serif-subtitle

    #widget-amr-content

        display: flex
        flex-direction: column

        +media(tablet-h)
            flex-direction: row
            gap: 5%

        img
            width: 100%

            +media(tablet-h)
                width: 40%
                height: auto

        p
            @extend .sans-paragraph
            margin-top: 2rem

            +media(tablet-h)
                width: 55%
                margin-top: 0


#invisible-footer
    display: none



