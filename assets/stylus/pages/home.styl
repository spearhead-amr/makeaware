#main-home
    @extend .content-margins
    background-color: brand-white

#content-sticky
    position: relative
    // Padding-bottom for desired margin (mobile-first)
    padding-bottom: 3rem        // Mobile: more space
    
    +media(tablet-v)
        padding-bottom: 2.5rem  // Vertical tablet: intermediate space
    
    +media(tablet-h)
        padding-bottom: 2rem    // Horizontal tablet and desktop: standard space


#home-intro
   
    height: calc(93dvh - 1.1rem)
    
    h1
        @extend .sans-logo
        margin-top: 6vh
        margin-bottom: 1rem
        color: brand-white
        mix-blend-mode: difference
        user-select: none
        -webkit-user-select: none
        -moz-user-select: none
        -ms-user-select: none

        +media(tablet-h)
            margin-top: 10vh
            margin-bottom: 0

    h2
        @extend .serif-home
        text-wrap: balance
        color: brand-white
        mix-blend-mode: difference
        user-select: none
        -webkit-user-select: none
        -moz-user-select: none
        -ms-user-select: none

        #glyph-1:before, #glyph-2:before, #glyph-3:before
            content: ""
            display: inline-block
            width: 1.5rem
            height: 1.5rem
            mix-blend-mode: difference
            background-color: brand-white // or your color
            mask-size: contain
            mask-repeat: no-repeat
            vertical-align: middle
            -webkit-mask-size: contain
            -webkit-mask-repeat: no-repeat

            +media(tablet-v)
                width: 3rem
                height: 3rem

            +media(tablet-h)
                width: 4rem
                height: 4rem

            +media(desktop)
                width: 9rem
                height: 9rem

        #glyph-1:before
            mask-image: url("/makeaware/assets/img/pages/home/icon1.svg")
            -webkit-mask-image: url("/makeaware/assets/img/pages/home/icon1.svg")

        #glyph-2:before
            mask-image: url("/makeaware/assets/img/pages/home/icon2.svg")
            -webkit-mask-image: url("/makeaware/assets/img/pages/home/icon2.svg")

        #glyph-3:before
            mask-image: url("/makeaware/assets/img/pages/home/icon3.svg")
            -webkit-mask-image: url("/makeaware/assets/img/pages/home/icon3.svg")

    

    +media(tablet-h)
        height: calc(86vh - 2.4rem)
    
    +media(desktop)
        height: calc(90vh - 2.4rem)


.makeaware-description
    display: flex
    flex-direction: column 
        
    
    h3   
        @extend .sans-caption
        padding-bottom: 0.5rem
        color: brand-white
        mix-blend-mode: difference
        user-select: none
        -webkit-user-select: none
        -moz-user-select: none
        -ms-user-select: none
        font-size: .6em

        &:after
            content: " ↓"
            position: relative
            bottom: 0

        &:before
            content: "↓ "
            position: relative
            bottom: 0

        +media(tablet-h)
            padding-bottom: 1rem
            font-size: 1.1em

    p
        @extend .serif-subtitle


.description-content
    display: flex
    flex-direction: column

    +media(tablet-h)
      flex-direction: row
      gap: 1rem

    img
      width: 100%
      -webkit-filter: grayscale(80%);
      filter: grayscale(80%);

      +media(tablet-h)
        width: 40%
        height: 700px
        //height: auto // alternative
        object-fit: cover

    p
      @extend .sans-paragraph
      margin-top: 2rem

      a
        color: brand-black

      +media(tablet-h)
        width: 60vw
        margin-top: 0

#widget-amr
    margin-bottom: 20vh

    h3
        @extend .serif-title
        margin-bottom: 1rem

    #widget-amr-abstract
        @extend .serif-subtitle

    #widget-amr-content

        display: flex
        flex-direction: column
        align-items: flex-start;

        +media(tablet-h)
            flex-direction: row
            gap: 5%

        img
            width: 100%

            +media(tablet-h)
                width: 40%
                height: auto

        p
            @extend .sans-paragraph
            margin-top: 2rem

            +media(tablet-h)
                width: 55%
                margin-top: 0


#invisible-footer
    display: none





