.hero-background
    display: flex
    align-items: center
    align-content: center
    align-self: center
    justify-content: center


    


.animated-background 
    width: 40vh
    height: 40vh
    background-size cover
    
    /* scale: 0.2 */
    /* Definisce l'animazione */
    animation: changeBackground 4s step-start infinite;
            
    /* Background image iniziale */
    background-image: url('/assets/img/pages/home/background-hero-sequence/makeaware-background-loop01.png')
    background-position: center
    background-repeat: no-repeat
    z-index: 0
    top:50vh
    position: absolute

    +media(tablet-h)
        width: 70vh
        height: 70vh
        top:18vh

    +media(desktop)
        width: 80vh
        height: 80vh
        top:12vh
        
        
        
        
    @keyframes changeBackground 
        0% 
            background-image: url('/assets/img/pages/home/background-hero-sequence/makeaware-background-loop01.png')
        
        20% 
            background-image: url('/assets/img/pages/home/background-hero-sequence/makeaware-background-loop02.png')
    
        40% 
            background-image: url('/assets/img/pages/home/background-hero-sequence/makeaware-background-loop03.png')
        
        60% 
            background-image: url('/assets/img/pages/home/background-hero-sequence/makeaware-background-loop04.png')
        
        80% 
            background-image: url('/assets/img/pages/home/background-hero-sequence/makeaware-background-loop05.png')

        100% 
            background-image: url('/assets/img/pages/home/background-hero-sequence/makeaware-background-loop01.png')
        
        