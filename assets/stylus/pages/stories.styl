// shared classes
.section-title-stories
    @extend .sans-paragraph
    text-transform: uppercase
    //font-size: 0.7rem
    margin-bottom 1rem

    +media(desktop)
        font-size: 1.9rem


#main-stories-collection
    @extend .content-margins
    margin-top: 15vh

    #story-collection-introduction
        h1
            display: none

        #story-collection-instructions
            @extend .sans-paragraph
            margin-top 2rem

            +media(tablet-h)
                @extend .grid-container

            +media(desktop)
                margin-top calc(2rem * 2.5)

            h2
                @extend .section-title-stories

            p
                column-count: 2
                column-gap: 2rem

    
    #story-collection-form-container
        @extend .sans-paragraph
        margin-top 2rem

        +media(tablet-h)
                @extend .grid-container

        +media(desktop)
            margin-top calc(2rem * 2.5)

        h2
            @extend .section-title-stories

        #story-form
            @extend .serif-paragraph
            display: float;
            flex-wrap: warp;
            justify-content: flex-start;
            align-content: flex-start;
            color: #AAA9AA;
            border: none;
            outline-width: 0;
            line-height: 148%;

            .color-symptoms
                color: brand-red !important
                // background-color: #FF3A17;
                // border-radius: 1.9rem;
                //-webkit-box-decoration-break: clone;
                //-o-box-decoration-break: clone;
                //box-decoration-break: clone;
                // padding-right: 0.5rem;
                // padding-left: 0.5rem;

            .color-diagnosis
                color: brand-purple !important
                //background-color: #AAA9AA;
                //border-radius: 1.9rem;
                //-webkit-box-decoration-break: clone;
                //-o-box-decoration-break: clone;
                //box-decoration-break: clone;
                //padding-right: 0.5rem;
                //padding-left: 0.5rem;

            .color-treatment
                color: brand-pink !important

            .color-follow-up
                color: brand-lightblue !important

            .color-demographics
                color: brand-green !important
                //background-color: #FF46ED;
                //border-radius: 1.9rem;
                //-webkit-box-decoration-break: clone;
                //-o-box-decoration-break: clone;
                //box-decoration-break: clone;
                //padding-right: 0.5rem;
                //padding-left: 0.5rem;

            .editable
                -webkit-user-select: none; /* Safari */
                user-select: none;
                color: #AAA9AA;
                outline-width: 0;
                text-transform: lowercase;

            .editable:focus-visible
                outline: none;

            .fixed
                color: black;
                margin-left: -0.1rem;

            .not-filled
                text-decoration: red dotted underline;

        #button-story-submit
            margin-right: auto
            margin-left: auto
            margin-top: 3rem


    #story-collection-about-container
        @extend .sans-paragraph
        margin-top 2rem

        +media(tablet-h)
            @extend .grid-container

        +media(desktop)
            margin-top calc(2rem * 2.5)

        h2
            @extend .section-title-stories

        p
            column-count: 2
            column-gap: 2rem

    #story-collection-explore-databook-container
        margin-bottom: 3rem
        margin-top: 3rem
        +media(tablet-h)
            @extend .grid-container

        #button-explore-databook
            margin-right: auto
