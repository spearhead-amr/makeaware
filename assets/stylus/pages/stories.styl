// shared classes
.section-title-stories
    @extend .sans-paragraph
    text-transform: uppercase
    //font-size: 0.7rem
    margin-bottom 1rem

    +media(desktop)
        font-size: 1.9rem


#main-stories-collection
    @extend .content-margins
    margin-top: 15vh

    #story-collection-introduction
        h1
            display: none

        #story-collection-instructions
            @extend .sans-paragraph
            margin-top 2rem

            +media(tablet-h)
                @extend .grid-container

            +media(desktop)
                margin-top calc(2rem * 2.5)

            h2
                @extend .section-title-stories

    
    #story-collection-form-container
        @extend .sans-paragraph
        margin-top 2rem

        +media(tablet-h)
                @extend .grid-container

        +media(desktop)
            margin-top calc(2rem * 2.5)

        h2
            @extend .section-title-stories

        #story-form
            @extend .serif-paragraph
            display: float;
            flex-wrap: warp;
            justify-content: flex-start;
            align-content: flex-start;
            color: #AAA9AA;
            border: none;
            outline-width: 0;
            line-height: 148%;

