            .color-red
                background-color: #FF3A17;
                border-radius: 1.9rem;
                -webkit-box-decoration-break: clone;
                -o-box-decoration-break: clone;
                box-decoration-break: clone;
                padding-right: 0.5rem;
                padding-left: 0.5rem;

            .color-grey
                background-color: #AAA9AA;
                border-radius: 1.9rem;
                -webkit-box-decoration-break: clone;
                -o-box-decoration-break: clone;
                box-decoration-break: clone;
                padding-right: 0.5rem;
                padding-left: 0.5rem;

            .color-pink
                background-color: #FF46ED;
                border-radius: 1.9rem;
                -webkit-box-decoration-break: clone;
                -o-box-decoration-break: clone;
                box-decoration-break: clone;
                padding-right: 0.5rem;
                padding-left: 0.5rem;

            .editable
                -webkit-user-select: none; /* Safari */
                user-select: none;
                color: #AAA9AA;
                outline-width: 0;
                text-transform: lowercase;

            .editable:focus-visible
                outline: none;

            .edited
                color: black !important;

            .fixed
                color: black;
                margin-left: -0.1rem;

            .not-filled
                text-decoration: red dotted underline;

        #button-story-submit
            margin-right: auto
            margin-left: auto
            margin-top: 3rem


