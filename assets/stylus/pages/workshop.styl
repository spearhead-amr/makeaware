#main-workshop
    @extend .content-margins
        
#workshop-introduction
    h1
        @extend .serif-title
        margin-top: 7vh
        margin-bottom: 1rem

        +media(tablet-h)
            margin-top: 10vh

    p
        @extend .serif-subtitle


#workshop-images
    display: flex
    flex-direction: column
    gap:0.5rem

    +media(tablet-h)

        img
            width:50%

#workshop-detail
    display: flex
    flex-direction: column

    h2
        @extend .sans-caption
        text-transform: uppercase
        margin-bottom: 0.5rem
        

        +media(tablet-h)
            margin-bottom: 0
            min-width:15%
            position: relative
            top: calc(1rem - (0.6rem*1.15))

        +media(desktop)
            top: calc(2rem - (1.2rem*1.15))

    p
        @extend .serif-paragraph 

    a
        text-decoration: underline
        //border-bottom: 1px solid brand-black
        color: brand-black
       


    +media(tablet-h)
        flex-direction: row

#workshop-images
    display: flex
    flex-direction: column
    gap:0.5rem

    +media(tablet-v)
        flex-direction: row
        flex-wrap: wrap
        gap: 0.5rem

        img
            width:calc(50%-0.5rem)

    +media(tablet-h)
        gap: 1rem
        
        img
            width:calc(50%-0.5rem)


