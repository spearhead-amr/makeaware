#main-workshops
    @extend .content-margins

#hidden
    display: none

.container
    margin-top: 10vh
    display: flex
    flex-wrap: wrap
    flex-direction: row
    gap: 0.5rem
    justify-content: flex-start
    margin-bottom: 5rem
    align-items: flex-start

    +media(tablet-h)
        gap: 1rem
        margin-bottom: 10rem
        margin-top: 15vh
        

.workshops-card
    background-color: brand-white
    border: 1px solid brand-black
    border-radius: 16px
    overflow: hidden
    width: 100%
    @extend .content-margins
    padding-top: 0.5rem
    padding-bottom: 0.5rem
    display: flex
    flex-direction: column
    height: auto
    box-sizing: border-box

    +media(tablet-v)
        width: calc((100% - 1rem) / 2)
        padding-top: 1rem
        padding-bottom: 1rem

    +media(tablet-h)
        width: calc((100% - 2rem) / 3)

    +media(desktop-w)
        width: calc((100% - 3rem) / 4)

    h1
        @extend .serif-paragraph
        margin-bottom: 0.1rem

    p
        @extend .sans-caption
        margin-bottom: 0.5rem
        flex-grow: 0  // Paragraph shouldn't expand

        +media(tablet-h)
            margin-bottom: 1rem

    img
        width: 100%
        height: 250px
        object-fit: cover
        margin-bottom: 0.5rem

        +media(tablet-h)
            margin-bottom: 1rem

.card-button
    display: inline-flex
    align-items: center
    justify-content: center
    padding: 8px 28px
    background-image: url("/assets/img/pages/workshops/makeaware-botton1.png")
    background-size: 100% 100%
    background-repeat: no-repeat
    background-position: center // Raggio molto alto per creare forma ovale
    color: brand-black
    text-decoration: none
    @extend .serif-captiontitle
    text-transform: uppercase
    cursor: pointer
    margin-left: auto
    display: block
    width: fit-content

.past-activities
    position: relative

    h1
        @extend .sans-caption
        text-transform: uppercase;
        margin-bottom: 0.5rem

.separator-line
    border-bottom: 1px solid brand-black
    width: 100%

.activities-list
    overflow: hidden
    margin-bottom: 5rem

    +media(tablet-h)
        margin-bottom: 10rem

.activity-item
    border-bottom: 1px solid brand-black
    display: flex
    align-items: flex-start
    flex-direction: column
    justify-content: space-between
    @extend .sans-caption
    padding-top: 0.5rem
    padding-bottom: 0.5rem

    &:last-child
        border-bottom:none

    +media(tablet-h)
        margin-left: 15%;
        flex-direction: row

.activity-info
    display: flex
    align-items: flex-start
    gap: 0.5rem
    flex-direction: column
    width: auto // Reserve space for discover tag space
    min-width: 0 // Allow flex items to shrink

    +media(tablet-h)
        gap: 10vw
        flex-direction: row
        width: 88%

.date 
    flex: 1
    align-self: flex-start;
    max-width: 8rem

.activity-details 
    display: flex
    flex-direction: column
    gap: 0
    flex: 1
    align-items: flex-start 
    text-align: left 
    max-width: 30rem

    .activity-top-detail
        color: brand-black

    .activity-bottom-detail
        color: brand-grey2


// Discover tag styling - fixed positioning
.discover-tag
    margin-top: 0.5rem
    color: brand-grey2
    text-transform: uppercase
    text-decoration: underline
    text-align: center
    flex-shrink: 0 // Prevent tag from shrinking
    align-self: flex-start

    +media(tablet-h)
        margin-top: 0
        @extend .sans-scheme
